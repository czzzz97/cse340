<h1><%= title  %></h1>
<% if (message) { %>
    <p><%= message %></p>
<% } %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<form action="/inv/add-classification" method="post">
    <label for="classification_name">Classification Name (no whitespace or special characters)</label>
    <input id="classification_name" name="classification_name" type="text" required pattern="[^_\W]+">
    <input type="submit">
</form>